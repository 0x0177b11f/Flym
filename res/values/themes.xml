<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/light_action_bar_blue</item>
        <item name="colorPrimaryDark">@color/dark_action_bar_blue</item>
        <item name="colorAccent">@color/light_action_bar_blue</item>
        <!-- app attr -->
        <item name="card_color">@android:color/white</item>
    </style>

    <style name="Theme.Dark" parent="Theme.AppCompat">
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/dark_action_bar_blue</item>
        <item name="colorPrimaryDark">@color/dark_action_bar_blue</item>
        <item name="colorAccent">@color/dark_action_bar_blue</item>
        <!-- app attr -->
        <item name="card_color">@color/dark_card_background</item>
    </style>
</resources>
